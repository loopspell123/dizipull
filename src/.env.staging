# STAGING Environment for Frontend Testing
# Frontend Configuration

# App Configuration
VITE_APP_NAME=WhatsApp Campaign Manager (Staging)
VITE_NODE_ENV=staging

# API Configuration
VITE_API_URL=https://staging.digicart.in/api
VITE_WS_URL=https://staging.digicart.in
VITE_SOCKET_URL=https://staging.digicart.in

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,mp4,mov,avi,mp3,wav,pdf,xlsx,xls,csv

# Debug Settings for Staging (more verbose for testing)
VITE_DEBUG=true
