{
  "name": "whatsapp-campaign-manager",
  "private": true,
  "version": "0.0.0",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port $PORT",
    "kill-port": "node -e \"import('./server/utils/portCheck.js').then(m => m.killPort(3001)).then(() => console.log('Port 3001 cleared')).catch(e => console.error('Error:', e.message))\"",
    "restart": "npm run kill-port && timeout /t 2 /nobreak >nul 2>&1 && npm run dev",
    "clean-start": "npm run kill-port && timeout /t 2 /nobreak >nul 2>&1 && npm start",
    "reset-dev": "npm run kill-port && npm run dev"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.17.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.2",
    "socket.io-client": "^4.7.5",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "express": "^4.18.2",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
