# Environment Configuration Template
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=production

# MongoDB Connection
# Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://boltuser:boltuser@cluster0.c511gzk.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret
# Generate a strong secret key for JWT token signing
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Client URLs (for CORS)
# Add your frontend URLs here
CLIENT_URL=http://localhost:5173
CLIENT_URL_PROD=digicart.in

# Default Admin Credentials
# These will be used to create the first admin user
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_PASSWORD=admin123

# Session Configuration
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=uploads

# Security Settings
BCRYPT_ROUNDS=12

# Development Settings (optional)
DEBUG=false
LOG_LEVEL=info